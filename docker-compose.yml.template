version: '3'
services:
  zookeeper:
    build:
      context: zookeeper/
    container_name: zookeeper
    ports:
      - "2181:2181"
  kafka:
    build:
      context: kafka/
    container_name: kafka
    ports:
      - "9092:9092"
    links:
      - zookeeper
    depends_on:
      - zookeeper
    environment:
      KAFKA_ADVERTISED_HOST_NAME: 127.0.0.1
      KAFKA_CREATE_TOPICS: "test:1:1"
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
  cp-kafka-rest:
    build:
       context: cp-kafka-rest/
    container_name: cp-kafka-rest
    ports:
      - "8082:8082"
    depends_on:
      - kafka
  kafka-topics-ui:
    build:
      context: kafka-topics-ui/
    container_name: kafka-topics-ui
    environment:
      KAFKA_REST_PROXY_URL: http://localhost:8082
      PROXY: 'true'
    ports:
      - "3030:3030"
    depends_on:
      - cp-kafka-rest
  news-aggregator:
    build:
      context: ./
      dockerfile: Dockerfile
    ports:
       - "8080:8080"
    image: 'me.bubbleinvestor/news-aggregator:latest'
    container_name: news-aggregator



